<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:weightSum="100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingEnd="10dp"
                android:paddingStart="12dp"
                android:weightSum="100"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/item_character_tv_name_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/lable"
                    android:layout_weight="50"
                    android:text="Name : "
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/item_character_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:layout_weight="50"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingEnd="10dp"
                android:paddingStart="12dp"
                android:weightSum="100"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/item_character_tv_height_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/lable"
                    android:layout_weight="50"
                    android:text="Height : "
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/item_character_tv_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:layout_weight="50"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingEnd="10dp"
                android:paddingStart="12dp"
                android:weightSum="100"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/item_character_tv_mass_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/lable"
                    android:layout_weight="50"
                    android:text="Mass : "
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/item_character_tv_mass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:layout_weight="50"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingEnd="10dp"
                android:paddingStart="12dp"
                android:weightSum="100"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/item_character_tv_date_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/lable"
                    android:layout_weight="50"
                    android:text="Date : "
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/item_character_tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:layout_weight="50"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingEnd="10dp"
                android:paddingStart="12dp"
                android:weightSum="100"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/item_character_tv_time_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/lable"
                    android:layout_weight="50"
                    android:text="Time : "
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/item_character_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:layout_weight="50"
                    android:textSize="18sp" />
            </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>